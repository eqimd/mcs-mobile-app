<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.OurAwesomeApp.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_orange</item>
    </style>

    <style name="Widget.OurAwesomeApp.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_green</item>
    </style>

<!--    Не стал использовать этот стиль, потому что не очень красиво выглядит-->
    <style name="Widget.OurAwesomeApp.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/brand_orange</item>
    </style>

    <style name="Widget.OurAwesomeApp.ImageButton.Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/brand_blue</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:src">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="Widget.OurAwesomeApp.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/brand_blue</item>
    </style>
</resources>